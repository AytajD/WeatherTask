<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@android:color/white"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/image_weather"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:src="@drawable/ic_sunny"
        android:scaleType="center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/text_summary"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="cursive"
        android:text="@string/summary"
        android:textAlignment="center"
        android:textColor="@android:color/holo_green_dark"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/image_weather"
        app:layout_constraintStart_toStartOf="@+id/image_weather"
        app:layout_constraintTop_toBottomOf="@+id/image_weather" />

    <TextView
        android:id="@+id/text_max_temp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/max_temprature"
        android:textSize="15sp"
        android:fontFamily="cursive"
        android:textColor="@android:color/black"
        app:layout_constraintEnd_toEndOf="@+id/text_summary"
        app:layout_constraintStart_toStartOf="@+id/text_summary"
        app:layout_constraintTop_toBottomOf="@+id/text_summary" />

    <TextView
        android:id="@+id/text_min_temp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/min_temprature"
        android:textColor="@android:color/black"
        android:textSize="15sp"
        android:fontFamily="cursive"
        app:layout_constraintEnd_toEndOf="@+id/text_speed"
        app:layout_constraintStart_toStartOf="@+id/text_speed"
        app:layout_constraintTop_toBottomOf="@+id/text_speed" />

    <TextView
        android:id="@+id/text_speed"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/speed"
        android:textColor="@android:color/black"
        android:textSize="15sp"
        android:fontFamily="cursive"
        app:layout_constraintEnd_toEndOf="@+id/text_max_temp"
        app:layout_constraintStart_toStartOf="@+id/text_max_temp"
        app:layout_constraintTop_toBottomOf="@+id/text_max_temp" />

    <TextView
        android:id="@+id/text_humidity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="@string/humidity"
        android:textSize="15sp"
        android:fontFamily="cursive"
        android:textColor="@android:color/black"
        app:layout_constraintEnd_toEndOf="@+id/text_min_temp"
        app:layout_constraintStart_toStartOf="@+id/text_min_temp"
        app:layout_constraintTop_toBottomOf="@+id/text_min_temp" />

</android.support.constraint.ConstraintLayout>